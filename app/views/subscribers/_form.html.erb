<%= render 'shared/errors', obj: @subscriber %>

<%= form_for(@subscriber, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :name %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control", placeholder: "Enter subscriber name", autofocus: true %>
    </div>
  </div>


 <div class="form-group">
   <div class="control-label col-sm-2">
      <%= f.label :email %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :email, class: "form-control", placeholder: "Enter subscriber email", autofocus: true %>
    </div>
  </div>
  
  <%=f.hidden_field 'subl', :value => params[:subl] %>

  <div class="form-group">
    <div class="col-sm-8 col-sm-offset-2">
      <%= f.submit class: "btn btn-primary btn-lg" %>
    </div>
  </div>

 

<% end %>
<div class="col-sm-8">
 <%= link_to "Cancel and Return to Subscriber list", subscriber_list_path(params[:subl])%>
 </div>



