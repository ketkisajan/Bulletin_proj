<h2 align="center">Login to get started</h2>


<div class="container-fluid">
    <div class="row">
        
        <div class="col-lg-6">
            <div class = "container1">
            <div class="jumbotron">
            <div class = "jumboback">
            <div class = "shadow-lg p-3 mb-5 bg-white rounded">
<div class="shadow-lg p-3 mb-5 bg-white rounded">
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :email %>
    </div>
    <div class="col-sm-8">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :password %>
    </div>
    <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control", placeholder: "Enter password", autocomplete: "off" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-8 col-sm-offset-2">
    <button class="button-71" role="button">LOGIN
      <% f.submit %>
      </button>
    </div>
  </div>
<% end %>

</div>
</div>

</div>

</div>
