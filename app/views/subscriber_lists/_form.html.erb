
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@subscriberList, :html => { class: "form-horizontal", role: "form" }) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :list_name %>  
        </div>
        <div class="col-sm-8">
          <%= f.text_area :list_name, rows: 4, class: "form-control", placeholder: "Name of Subscriber list", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :list_type %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :list_type, rows: 4, class: "form-control", placeholder: "Type of Subscriber list" %>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2">
         
 <%
=begin%>
 <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text } %>
            <% end %>  
<%
=end%>

          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-8 col-sm-offset-2">
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
    
  </div>
</div>